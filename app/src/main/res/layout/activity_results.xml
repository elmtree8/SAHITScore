<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.erin.sahitscore.ResultsActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/resultsMessage"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView android:id="@+id/coreMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coreMsg"
            android:layout_below="@+id/message1"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <com.github.mikephil.charting.charts.BarChart android:id="@+id/coreChart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/coreMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

        </com.github.mikephil.charting.charts.BarChart>

        <TextView android:id="@+id/coreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/coreChart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/neuroMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/neuroMsg"
            android:layout_below="@+id/coreText"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <com.github.mikephil.charting.charts.BarChart android:id="@+id/neuroChart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/neuroMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="gone">

        </com.github.mikephil.charting.charts.BarChart>

        <TextView android:id="@+id/neuroText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/neuroChart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <TextView android:id="@+id/fullMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fullMsg"
            android:layout_below="@+id/neuroText"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <com.github.mikephil.charting.charts.BarChart android:id="@+id/fullChart"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/fullMessage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

        </com.github.mikephil.charting.charts.BarChart>

        <TextView android:id="@+id/fullText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/fullChart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

    </RelativeLayout>

</ScrollView>
